<html>

<head>
    <title>Snake</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
    
<style>
    body {
        background: #202025;
        margin: 0;
        cursor: url('mouse.ico');
    }
    
    #score {
        position: fixed;
        font-size: 60px;
        color: white;
        right: 100px;
        top: 50px;
        font-family: "roboto";
        font-weight: 100;
        opacity: 0.1;
        border-radius: 20px;
        border-color: #fff;
        border-width: 3px;
        border-style: solid;
        padding: 10px;
        background-color: rgba(100,100,100,0.2);
    }
    
    #banner {
        width: 500px;
        background: white;
        position: fixed;
        display: block;
        z-index: +1000;
        top: 50%;
        left: 50%;
        transform: translateY(-50%);
        margin: 0px -250px;
        box-shadow: 0px 20px 40px 10px rgba(0, 0, 0, 0.4), 0px 0px 5px 1px rgba(0, 0, 0, 0.3);
        animation: showUp 0.2s 1 linear;
        display: none;
    }
    
    @keyframes showUp {
        0% {
            transform: rotateX(-50deg) translateY(-50%);
            opacity: 0;
        }
        100% {
            transform: rotateX(0deg) translateY(-50%);
            opacity: 1;
        }
    }
    
    #banner>div:first-child {
        display: block;
        line-height: 30px;
        padding: 30px 0px;
        padding-bottom: 20px;
        background: rgba(0, 0, 0, 0.6);
        color: #191919;
        font-size: 40px;
        text-align: center;
        font-family: 'Roboto';
        font-weight: 300;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }
    
    #banner>div:first-child>span {
        font-size: 45px;
        font-weight: 400;
    }
    
    #banner>div:nth-child(2) {
        display: block;
        padding: 60px 0px;
        text-align: center;
    }
    
    #banner>div:nth-child(2)>div.material-icons:focus {
        outline: none;
        background: rgba(0, 0, 0, 0.1);
        transform: scale(1);
    }
    
    #banner>div:nth-child(2)>div.material-icons {
        line-height: 90px;
        font-size: 40px;
        width: 90px;
        text-align: center;
        margin: -20px 20px;
        border-radius: 50%;
        color: #333;
        border: 1px solid rgba(100, 100, 100, 1);
        cursor: pointer;
        transition: all 0.3s;
        transform: scale(0.6);
    }
    
    #banner>div:nth-child(2)>div.material-icons:hover {
        background: rgba(0, 0, 0, 0.1);
        transform: scale(1);
    }
    
    #banner>div:nth-child(2)>div.material-icons:active {
        transform: scale(0.9);
    }
</style>

<body>
    <canvas id="screen">
    </canvas>
    <audio id='sound'></audio>
    <div id='score'></div>
    <div id='banner'>
        <div>Score : <span id='scoreBoard'>45</span></div>
        <div>
            <div tabindex="0" title='Resume' id='resume' class='material-icons'>play_arrow</div>
            <div tabindex="0" title='New Game' id='newGame' class='material-icons'>refresh</div>
        </div>
    </div>
</body>
<script src="javascripts/jquery.min.js"></script>
    <script src="javascripts/socket.io.js"></script>
    <script src="javascripts/index.js"></script>
    <script src="javascripts/socket.js"></script>

</html>
